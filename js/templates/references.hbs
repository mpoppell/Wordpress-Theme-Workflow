<div id="cv-references-info" class="">
  <h3>References</h3>
  {{#references}}
      <div class="cv-item references row {{class}}">
        <div class="short-info col-md-4 col-xl-3">
          <div class="row">
            <div class="col-sm-6 col-md-12">
              <h4 class="referee"><a class="{{class}}" href="{{link}}">{{referee}}</a></h4>
              <h5 class="position">{{position}}</h5>
              
            </div> <!-- col end -->

          </div> <!-- short info row end -->
        </div>
        <div class="extended-info col">
            <div class="referee-description">
              <h5>Overview</h5>
              <p>{{.}}</p>
            </div>

          </div>
      </div>
    {{/references}}
  </div>
</div>
